{
  "name": "es6-webpack2-boilerplate",
  "version": "1.0.2",
  "description": "a boilerpalte for web devolopment with es6 and webpack2",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dashboard -- webpack-dev-server --config config/config.dev.js",
    "debug": "webpack-dashboard -- webpack-dev-server --config config/config.debug.js",
    "eslint": "eslint ./config ./src ./test",
    "eslint:watch": "esw -w ./config ./src ./test",
    "sasslint": "sass-lint -v -q",
    "test": "npm run sasslint && npm run eslint && BABEL_ENV=test mocha",
    "test:watch": "BABEL_ENV=test mocha -w",
    "test:karma": "npm run sasslint && npm run lint && karma start",
    "coverage": "BABEL_ENV=test istanbul cover _mocha",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "clean": "rm -rf dist && rm -rf coverage",
    "build": "npm run clean && npm run test && BABEL_ENV=production webpack --progress --color --config config/config.prod.js",
    "postpublish": "git push --all && git push origin --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maiwenan/es6-webpack2-boilerplate.git"
  },
  "keywords": [
    "es6",
    "webpack2",
    "hrm"
  ],
  "author": "mhaw",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-preset-airbnb": "^2.0.0",
    "babel-preset-babili": "0.0.3",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.13.0",
    "browser-sync": "^2.16.0",
    "browser-sync-webpack-plugin": "^1.1.2",
    "chai": "^3.5.0",
    "coveralls": "^2.11.13",
    "css-loader": "^0.25.0",
    "eslint": "^3.5.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-config-standard-react": "^4.0.1",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-react": "^6.2.0",
    "eslint-plugin-standard": "^2.0.0",
    "eslint-watch": "^2.1.14",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^9.5.0",
    "json-loader": "^0.5.4",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.1.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "mocha": "^3.0.2",
    "node-sass": "^3.9.3",
    "postcss-loader": "^0.13.0",
    "sass-lint-rules": "^1.0.2",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.1.0-beta.22",
    "webpack-dashboard": "^0.1.8",
    "webpack-dev-server": "^2.1.0-beta.4",
    "webpack-merge": "^0.14.1"
  }
}
