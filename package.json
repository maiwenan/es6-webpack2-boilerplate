{
  "name": "es6-webpack2-boilerplate",
  "version": "1.0.3",
  "description": "a boilerpalte for web devolopment with es6 and webpack2",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dashboard -- webpack-dev-server --config config/config.dev.js",
    "debug": "webpack-dashboard -- webpack-dev-server --config config/config.debug.js",
    "eslint": "eslint ./config ./src ./test",
    "eslint:watch": "esw -w ./config ./src ./test",
    "sasslint": "sass-lint -v -q",
    "test": "npm run sasslint && npm run eslint && cross-env BABEL_ENV=test mocha",
    "test:watch": "cross-env BABEL_ENV=test mocha -w",
    "test:karma": "npm run sasslint && npm run lint && karma start",
    "coverage": "cross-env BABEL_ENV=test istanbul cover _mocha",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "clean": "rm -rf dist && rm -rf coverage",
    "build": "npm run clean && npm run test && cross-env BABEL_ENV=production webpack --progress --color --config config/config.prod.js",
    "postpublish": "git push --all && git push origin --tags"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/maiwenan/es6-webpack2-boilerplate.git"
  },
  "keywords": [
    "es6",
    "webpack2",
    "hrm"
  ],
  "author": "mhaw",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.0",
    "babel-preset-airbnb": "^2.2.3",
    "babel-preset-babili": "0.0.12",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "browser-sync": "^2.18.8",
    "browser-sync-webpack-plugin": "^1.1.4",
    "chai": "^3.5.0",
    "coveralls": "^2.12.0",
    "cross-env": "^3.2.3",
    "css-loader": "^0.26.2",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-config-standard-react": "^4.3.0",
    "eslint-plugin-flowtype-errors": "^3.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-standard": "^2.1.1",
    "eslint-watch": "^3.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "flow-bin": "^0.41.0",
    "html-webpack-plugin": "^2.28.0",
    "istanbul": "^0.4.5",
    "jsdom": "^9.11.0",
    "json-loader": "^0.5.4",
    "karma": "^1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.3",
    "pre-commit": "^1.2.2",
    "sass-lint-rules": "^1.0.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.13.2",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-dashboard": "^0.3.0",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^4.0.0"
  }
}
